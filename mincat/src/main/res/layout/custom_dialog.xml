<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loadingbar_fl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/loadingbar_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="@dimen/margin_one_hundred_fifty"
            android:layout_height="@dimen/margin_one_hundred_twenty"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/corners_dialog_white_55">

            <ProgressBar
                android:id="@+id/loading_progressbar"
                android:layout_width="@dimen/margin_sixty"
                android:layout_height="@dimen/margin_sixty"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/margin_ten"
                android:indeterminateDrawable="@drawable/rotate_image7" />

            <ImageView
                android:id="@+id/loading_center_image"
                android:layout_width="@dimen/margin_thirty_five"
                android:layout_height="@dimen/margin_twenty_five"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/margin_ten"
                android:lines="1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_fourteen"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>